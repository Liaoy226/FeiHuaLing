/* component/list/list.wxss */

/* 基础样式，用于所有屏幕大小 */
.list {
  width: 100%; /* 使用100%宽度，以适应各种屏幕 */
  padding: 1px; /* 保留原始的padding设置 */
  box-sizing: border-box;
  display: flex; /* 使用Flexbox布局 */
  flex-wrap: wrap; /* 允许项目自动换行 */
  justify-content: space-between; /* 项目之间的间距 */
}

.list .item {
  width: 50%; /* 每行显示两个项目，留出一些间距 */
  padding: 20px;
  box-sizing: border-box;
  float: none; /* 不再使用浮动 */
  background: rgb(255, 255, 255);
  margin: 10px 0; /* 调整项目之间的上下间距 */
}

.list .item .image image {
  width: 100%; /* 图片宽度调整为100% */
}

.list .item .info .content {
  font-size: 14px;
  text-align: left;
  line-height: 1.05rem;
  height: 1rem;
  font-family:  -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  overflow: hidden;
  color: #434343;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1; /* 控制文字行数 */
  -webkit-box-orient: vertical;
  word-wrap: break-word;
}
